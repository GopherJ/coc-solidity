{
  "name": "coc-solidity",
  "version": "0.0.0-development",
  "description": "Solidity smart contract language extension",
  "author": "Alejandro Santander <palebluedot@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "coc.nvim"
  ],
  "engines": {
    "coc": "^0.0.70"
  },
  "scripts": {
    "clean": "rimraf lib",
    "watch": "webpack --watch",
    "build": "webpack",
    "prepare": "npm-run-all clean build"
  },
  "devDependencies": {
    "@types/node": "^14.0.13",
    "coc.nvim": "^0.0.77",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-solidity configuration",
      "properties": {
        "coc-solidity.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable coc-solidity extension"
        }
      }
    },
    "commands": [
      {
        "command": "coc-solidity.testCommand",
        "title": "coc-solidity test command title"
      }
    ]
  }
}
